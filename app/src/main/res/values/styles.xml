<?xml version="1.0" encoding="utf-8"?>


<resources>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidth">3px</item>
        <item name="boxCornerRadiusBottomEnd">0px</item>
        <item name="boxCornerRadiusTopStart">0px</item>
        <item name="boxCornerRadiusTopEnd">0px</item>
        <item name="errorIconTint">@color/white</item>
        <item name="boxCornerRadiusBottomStart">0px</item>
        <item name="boxStrokeErrorColor">@color/white</item>
        <item name="errorTextColor">@color/white</item>
    </style>

    <style name="AddressTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidth">0px</item>
        <item name="boxCornerRadiusBottomEnd">0px</item>
        <item name="boxCornerRadiusTopStart">0px</item>
        <item name="boxCornerRadiusTopEnd">0px</item>
        <item name="errorIconTint">@color/red</item>
        <item name="boxCornerRadiusBottomStart">0px</item>
        <item name="boxStrokeErrorColor">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_off</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/curved_dialog_box</item>
    </style>

    <style name="DrawerTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">48px</item>
    </style>
</resources>