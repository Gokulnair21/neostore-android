<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="100px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/productTitleDialogBox"
        android:textColor="@color/black_600"
        android:textSize="75px"
        android:fontFamily="@font/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginVertical="100px"
        android:id="@+id/productImageDialogBox"
        android:layout_width="772px"
        android:layout_height="534px"/>
    <TextView
        android:text="@string/enter_quantity"
        android:textColor="@color/black_600"
        android:textSize="60px"
        android:fontFamily="@font/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="0dp"
        android:layout_marginVertical="66px"
        app:contentPadding="0px"
        app:strokeWidth="2dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/green"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quantityEditText"
            android:layout_width="336px"
            android:layout_height="129px"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="@color/black_800"
                android:textSize="60px"
                android:padding="0px"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/quantitySubmitButton"
        app:cornerRadius="20px"
        android:textSize="70px"
        android:paddingVertical="20px"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_bar_color"
        android:text="@string/submit_button"
        android:textAllCaps="true"
        android:layout_width="595px"
        android:layout_height="wrap_content"/>


</LinearLayout>