<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_off"
    tools:context=".views.AddAddressPage">


    <LinearLayout
        android:layout_marginHorizontal="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="@color/black_400"
            android:layout_marginTop="80px"
            android:layout_marginBottom="50px"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:fontFamily="@font/medium"
            android:textSize="50px"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AddressTextInputLayoutStyle"
            android:background="@color/white"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:textSize="50px"
                android:padding="20px"
                android:maxLines="20"
                android:inputType="textMultiLine"
                android:fontFamily="@font/book"
                android:textColor="@color/black_400"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textColor="@color/black_400"
            android:layout_marginTop="80px"
            android:layout_marginBottom="50px"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landmark"
            android:fontFamily="@font/medium"
            android:textSize="50px"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/landmarkTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AddressTextInputLayoutStyle"
            android:background="@color/white"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:padding="20px"
                android:inputType="text"
                android:maxLines="4"
                android:minLines="1"
                android:fontFamily="@font/book"
                android:textColor="@color/black_400"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginBottom="80px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="80px"
                    android:layout_marginBottom="50px"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:fontFamily="@font/medium"
                    android:textSize="50px"
                    android:textColor="@color/black_400"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cityTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AddressTextInputLayoutStyle"
                    android:background="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:padding="20px"
                        android:textAllCaps="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:fontFamily="@font/book"
                        android:textColor="@color/black_400"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="80px"
                    android:layout_marginBottom="50px"
                    android:textAllCaps="true"
                    android:textColor="@color/black_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zip_code"
                    android:fontFamily="@font/medium"
                    android:textSize="50px"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zipCodeTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AddressTextInputLayoutStyle"                    android:background="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:padding="20px"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:fontFamily="@font/book"
                        android:textColor="@color/black_400"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:textColor="@color/black_400"
                    android:layout_marginTop="80px"
                    android:layout_marginBottom="50px"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:fontFamily="@font/medium"
                    android:textSize="50px"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stateTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AddressTextInputLayoutStyle"                    android:background="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:textAllCaps="true"
                        android:padding="20px"
                        android:inputType="text"
                        android:maxLines="1"
                        android:fontFamily="@font/book"
                        android:textColor="@color/black_400"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="80px"
                    android:layout_marginBottom="50px"
                    android:textAllCaps="true"
                    android:textColor="@color/black_400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country"
                    android:fontFamily="@font/medium"
                    android:textSize="50px"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/countryTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AddressTextInputLayoutStyle"
                    android:background="@color/white"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:padding="20px"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:fontFamily="@font/book"
                        android:textColor="@color/black_400"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveAddressButton"
            app:cornerRadius="20px"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_address_button"
            android:letterSpacing="0"
            android:textAllCaps="true"
            android:textSize="75px"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"
            android:backgroundTint="@color/app_bar_color"
            />

    </LinearLayout>

</ScrollView>