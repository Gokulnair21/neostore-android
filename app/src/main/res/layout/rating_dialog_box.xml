<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="100px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/productTitleDialogBox"
        android:textColor="@color/black_600"
        android:textSize="75px"
        android:fontFamily="@font/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginVertical="100px"
        android:id="@+id/productImageDialogBox"
        android:layout_width="772px"
        android:layout_height="534px"/>
    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_marginBottom="100px"
        android:id="@+id/productRating"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_rating_dialog"
        android:layout_gravity="center"
        android:isIndicator="false"
        android:layout_width="wrap_content"
        android:layout_height="132px"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rateNowDialogButton"
        app:cornerRadius="20px"
        android:textSize="70px"
        android:paddingVertical="20px"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_bar_color"
        android:text="@string/rate_now_button"
        android:textAllCaps="true"
        android:layout_width="595px"
        android:layout_height="wrap_content"/>


</LinearLayout>