<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingVertical="100px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/productTitleDialogBox"
        android:textColor="@color/black_600"
        android:textSize="75px"
        android:fontFamily="@font/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginVertical="100px"
        android:id="@+id/productImageDialogBox"
        android:layout_width="772px"
        android:layout_height="534px"/>
    <LinearLayout
        android:layout_marginBottom="100px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@color/red"
            android:layout_width="132px"
            android:layout_height="132px"/>
        <ImageView
            android:paddingHorizontal="5px"
            android:src="@color/red"
            android:layout_width="132px"
            android:layout_height="132px"/>
        <ImageView
            android:src="@color/red"
            android:layout_width="132px"
            android:layout_height="132px"/>
        <ImageView
            android:paddingHorizontal="5px"
            android:src="@color/red"
            android:layout_width="132px"
            android:layout_height="132px"/>
        <ImageView
            android:backgroundTint="@color/grey"
            android:background="@color/red"
            android:layout_width="132px"
            android:layout_height="132px"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rateNowDialogButton"
        app:cornerRadius="20px"
        android:textSize="70px"
        android:paddingVertical="20px"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_bar_color"
        android:text="@string/rate_now_button"
        android:textAllCaps="true"
        android:layout_width="595px"
        android:layout_height="wrap_content"/>


</LinearLayout>