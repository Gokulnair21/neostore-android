<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/drawer_background_color"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center_horizontal">
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="107px"
        android:layout_marginBottom="40px"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:strokeColor="@color/white"
        app:strokeWidth="9px"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        >
        <ImageView
            android:id="@+id/profilePic"
            android:background="@color/crimson"
            android:layout_width="241px"
            android:layout_height="241px"
            android:src="@drawable/user_male"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_marginTop="54px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Gokul Nair"
        android:textColor="@color/white"
        android:textSize="69px"
        android:fontFamily="@font/medium"
        />
    <TextView
        android:id="@+id/emailID"
        android:layout_marginVertical="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gokyl@gmail.com"
        android:textColor="@color/white"
        android:textSize="39px"
        android:fontFamily="@font/book"
        />


</LinearLayout>