<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0px"
    app:contentPadding="20px"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:clickable="false"
            android:buttonTint="@color/grey"
            android:id="@+id/radioButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="0px"
            app:contentPaddingRight="20px"
            app:contentPaddingLeft="20px"
            android:padding="20px"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/white_off"
            app:strokeWidth="3px"
            app:cardCornerRadius="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_margin="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_gravity="top|right"
                    android:background="@drawable/remove_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:layout_gravity="top|left"
                    android:layout_marginVertical="30px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/heading"
                        android:layout_marginBottom="35px"
                        android:text="Glen Demello"
                        android:textColor="@color/black_400"
                        android:fontFamily="@font/medium"
                        android:textSize="66px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/address"
                        android:textColor="@color/black_400"
                        android:fontFamily="@font/book"
                        android:textSize="45px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>